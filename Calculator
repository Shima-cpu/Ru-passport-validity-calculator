# Create a deployable Streamlit app repository and zip it for download.
import os, textwrap, json, zipfile, io, datetime, pathlib

repo_name = "rf-passport-replacement-calculator"
base = f"/mnt/data/{repo_name}"
os.makedirs(base, exist_ok=True)
os.makedirs(f"{base}/.streamlit", exist_ok=True)

app_py = r'''# -*- coding: utf-8 -*-
import streamlit as st
from datetime import date, timedelta
from dateutil.relativedelta import relativedelta

st.set_page_config(
    page_title="–ö–∞–ª—å–∫—É–ª—è—Ç–æ—Ä –∑–∞–º–µ–Ω—ã –ø–∞—Å–ø–æ—Ä—Ç–∞ –†–§",
    page_icon="üõÇ",
    layout="centered"
)

# --------- Helpers ---------
def safe_add_years(d: date, years: int) -> date:
    """–î–æ–±–∞–≤–∏—Ç—å –≥–æ–¥—ã –∫ –¥–∞—Ç–µ —Ä–æ–∂–¥–µ–Ω–∏—è, –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞—è 29 —Ñ–µ–≤—Ä–∞–ª—è."""
    try:
        return d.replace(year=d.year + years)
    except ValueError:
        # 29 —Ñ–µ–≤—Ä–∞–ª—è -> 28 —Ñ–µ–≤—Ä–∞–ª—è —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–µ–≥–æ –≥–æ–¥–∞
        return d.replace(month=2, day=28, year=d.year + years)

def classify_passport_stage(birth: date, issue: date) -> str:
    """–û–ø—Ä–µ–¥–µ–ª–∏—Ç—å, –Ω–∞ –∫–∞–∫–æ–º –≤–æ–∑—Ä–∞—Å—Ç–Ω–æ–º —ç—Ç–∞–ø–µ –±—ã–ª –≤—ã–¥–∞–Ω —Ç–µ–∫—É—â–∏–π –ø–∞—Å–ø–æ—Ä—Ç."""
    d14 = safe_add_years(birth, 14)
    d20 = safe_add_years(birth, 20)
    d45 = safe_add_years(birth, 45)

    # –î–æ–ø—É—Å–∫–∞–µ–º 90-–¥–Ω–µ–≤–Ω—ã–π –∫–æ—Ä–∏–¥–æ—Ä –ø–æ—Å–ª–µ –ø–æ—Ä–æ–≥–æ–≤–æ–≥–æ –î–†
    if d14 <= issue <= d20 + timedelta(days=90):
        return "–ü–µ—Ä–≤–∏—á–Ω–æ–µ –ø–æ–ª—É—á–µ–Ω–∏–µ –≤ 14 –ª–µ—Ç"
    if d20 <= issue <= d45 + timedelta(days=90):
        return "–û–±–º–µ–Ω –≤ 20 –ª–µ—Ç"
    if issue >= d45:
        return "–û–±–º–µ–Ω –≤ 45 –ª–µ—Ç"
    return "–ù–µ–æ–±—ã—á–Ω–∞—è –¥–∞—Ç–∞ –≤—ã–¥–∞—á–∏ (–ø—Ä–æ–≤–µ—Ä—å—Ç–µ –≤–≤–æ–¥)"

def compute_next_change(birth: date, today: date) -> dict:
    """–†–∞—Å—Å—á–∏—Ç–∞—Ç—å —Å–ª–µ–¥—É—é—â—É—é –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—É—é –∑–∞–º–µ–Ω—É –∏ –∫—Ä–∞–π–Ω–∏–π —Å—Ä–æ–∫ (90 –¥–Ω–µ–π)."""
    d20 = safe_add_years(birth, 20)
    d45 = safe_add_years(birth, 45)

    if today < d20:
        stage = "–ü–µ—Ä–≤–∞—è –∑–∞–º–µ–Ω–∞ –≤ 20 –ª–µ—Ç"
        next_change = d20
    elif today < d45:
        stage = "–í—Ç–æ—Ä–∞—è –∑–∞–º–µ–Ω–∞ –≤ 45 –ª–µ—Ç"
        next_change = d45
    else:
        return {
            "stage": "–ü–æ—Å–ª–µ 45 –ª–µ—Ç: –≤–æ–∑—Ä–∞—Å—Ç–Ω—ã—Ö –∑–∞–º–µ–Ω –±–æ–ª—å—à–µ –Ω–µ—Ç",
            "next_change": None,
            "deadline": None,
            "status": "–ü–æ—Å–ª–µ 45 –ª–µ—Ç –ø–∞—Å–ø–æ—Ä—Ç —Å—á–∏—Ç–∞–µ—Ç—Å—è –±–µ—Å—Å—Ä–æ—á–Ω—ã–º (–±–µ–∑ –≤–æ–∑—Ä–∞—Å—Ç–Ω—ã—Ö –∑–∞–º–µ–Ω)."
        }

    deadline = next_change + timedelta(days=90)
    if today > deadline:
        status = "‚ùå –°—Ä–æ–∫ –∑–∞–º–µ–Ω—ã –ø—Ä–æ—Å—Ä–æ—á–µ–Ω (–ø—Ä–æ—à–ª–æ –±–æ–ª–µ–µ 90 –¥–Ω–µ–π –ø–æ—Å–ª–µ –¥–Ω—è —Ä–æ–∂–¥–µ–Ω–∏—è)."
    elif today >= next_change:
        days = (deadline - today).days
        status = f"‚ö†Ô∏è –¢—Ä–µ–±—É–µ—Ç—Å—è –∑–∞–º–µ–Ω–∞. –î–æ –∫—Ä–∞–π–Ω–µ–≥–æ —Å—Ä–æ–∫–∞ –æ—Å—Ç–∞–ª–æ—Å—å {days} –¥–Ω."
    else:
        days = (next_change - today).days
        status = f"‚úÖ –ü–∞—Å–ø–æ—Ä—Ç –¥–µ–π—Å—Ç–≤–∏—Ç–µ–ª–µ–Ω. –î–æ –¥–∞—Ç—ã –∑–∞–º–µ–Ω—ã –æ—Å—Ç–∞–ª–æ—Å—å {days} –¥–Ω."

    return {
        "stage": stage,
        "next_change": next_change,
        "deadline": deadline,
        "status": status
    }

def validate_inputs(birth: date, issue: date, today: date) -> list:
    errs = []
    if issue > today:
        errs.append("–î–∞—Ç–∞ –≤—ã–¥–∞—á–∏ –ø–∞—Å–ø–æ—Ä—Ç–∞ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –≤ –±—É–¥—É—â–µ–º.")
    if birth > today:
        errs.append("–î–∞—Ç–∞ —Ä–æ–∂–¥–µ–Ω–∏—è –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –≤ –±—É–¥—É—â–µ–º.")
    if (today - birth).days < 14*365 - 10:  # –≥—Ä—É–±–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞: –º–ª–∞–¥—à–µ 14 –ª–µ—Ç
        errs.append("–õ–∏—Ü—É –º–ª–∞–¥—à–µ 14 –ª–µ—Ç –ø–∞—Å–ø–æ—Ä—Ç –µ—â—ë –Ω–µ –≤—ã–¥–∞–µ—Ç—Å—è.")
    if issue < birth:
        errs.append("–î–∞—Ç–∞ –≤—ã–¥–∞—á–∏ –ø–∞—Å–ø–æ—Ä—Ç–∞ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å —Ä–∞–Ω—å—à–µ –¥–∞—Ç—ã —Ä–æ–∂–¥–µ–Ω–∏—è.")
    # –ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ, –µ—Å–ª–∏ –≤—ã–¥–∞—á–∞ —Å–∏–ª—å–Ω–æ –æ—Ç–ª–∏—á–∞–µ—Ç—Å—è –æ—Ç –æ–∂–∏–¥–∞–µ–º—ã—Ö –æ–∫–æ–Ω
    d14 = safe_add_years(birth, 14)
    if issue < d14 - timedelta(days=1):
        errs.append("–ü–∞—Å–ø–æ—Ä—Ç –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –≤—ã–¥–∞–Ω —Ä–∞–Ω–µ–µ 14-–ª–µ—Ç–∏—è. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –¥–∞—Ç—É –≤—ã–¥–∞—á–∏.")
    return errs

# --------- UI ---------
st.title("üõÇ –ö–∞–ª—å–∫—É–ª—è—Ç–æ—Ä –∑–∞–º–µ–Ω—ã –ø–∞—Å–ø–æ—Ä—Ç–∞ –†–§")
st.caption("–í—ã—á–∏—Å–ª—è–µ—Ç –¥–∞—Ç—ã –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ–π –∑–∞–º–µ–Ω—ã –ø–∞—Å–ø–æ—Ä—Ç–∞ –ø–æ –≤–æ–∑—Ä–∞—Å—Ç–Ω—ã–º –ø–æ—Ä–æ–≥–∞–º (20 –∏ 45 –ª–µ—Ç) –∏ 90-–¥–Ω–µ–≤–Ω–æ–º—É —Å—Ä–æ–∫—É.")

with st.expander("–ü—Ä–∞–≤–æ–≤–∞—è –æ—Å–Ω–æ–≤–∞ (–∫—Ä–∞—Ç–∫–æ)"):
    st.markdown(
        "- –ü–∞—Å–ø–æ—Ä—Ç –≥—Ä–∞–∂–¥–∞–Ω–∏–Ω–∞ –†–§ –≤—ã–¥–∞—ë—Ç—Å—è –≤ 14 –ª–µ—Ç –∏ –ø–æ–¥–ª–µ–∂–∏—Ç –∑–∞–º–µ–Ω–µ –ø—Ä–∏ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–∏ 20 –∏ 45 –ª–µ—Ç.\n"
        "- –ù–∞ –∑–∞–º–µ–Ω—É –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–ª—è–µ—Ç—Å—è 90 –∫–∞–ª–µ–Ω–¥–∞—Ä–Ω—ã—Ö –¥–Ω–µ–π –ø–æ—Å–ª–µ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—â–µ–≥–æ –¥–Ω—è —Ä–æ–∂–¥–µ–Ω–∏—è.\n"
        "‚ö†Ô∏è –£—á–∏—Ç—ã–≤–∞–π—Ç–µ, —á—Ç–æ –ª–æ–∫–∞–ª—å–Ω—ã–µ –ø—Ä–∞–≤–∏–ª–∞ –∏ –∏—Å–∫–ª—é—á–µ–Ω–∏—è (–Ω–∞–ø—Ä–∏–º–µ—Ä, –¥–ª—è –≥—Ä–∞–∂–¥–∞–Ω –∑–∞ —Ä—É–±–µ–∂–æ–º) –º–æ–≥—É—Ç –º–µ–Ω—è—Ç—å—Å—è."
    )

today = date.today()
col1, col2 = st.columns(2)
with col1:
    birth = st.date_input("–î–∞—Ç–∞ —Ä–æ–∂–¥–µ–Ω–∏—è", value=date(1990, 1, 1), format="DD.MM.YYYY")
with col2:
    issue = st.date_input("–î–∞—Ç–∞ –≤—ã–¥–∞—á–∏ —Ç–µ–∫—É—â–µ–≥–æ –ø–∞—Å–ø–æ—Ä—Ç–∞", value=date(2010, 1, 1), format="DD.MM.YYYY")

if st.button("–†–∞—Å—Å—á–∏—Ç–∞—Ç—å"):
    errors = validate_inputs(birth, issue, today)
    for e in errors:
        st.error(e)

    if not errors:
        age_years = relativedelta(today, birth).years
        st.subheader("–†–µ–∑—É–ª—å—Ç–∞—Ç—ã")
        st.write(f"**–í–æ–∑—Ä–∞—Å—Ç (–ø–æ–ª–Ω—ã—Ö –ª–µ—Ç):** {age_years}")

        stage_info = classify_passport_stage(birth, issue)
        st.write(f"**–¢–µ–∫—É—â–∏–π –¥–æ–∫—É–º–µ–Ω—Ç –ø–æ–ª—É—á–µ–Ω –∫–∞–∫:** {stage_info}")

        res = compute_next_change(birth, today)
        st.write(f"**–≠—Ç–∞–ø:** {res['stage']}")

        if res["next_change"]:
            st.write(f"**–î–∞—Ç–∞ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ–π –∑–∞–º–µ–Ω—ã:** {res['next_change'].strftime('%d.%m.%Y')}")
            st.write(f"**–ö—Ä–∞–π–Ω–∏–π —Å—Ä–æ–∫ (90 –¥–Ω–µ–π –ø–æ—Å–ª–µ –î–†):** {res['deadline'].strftime('%d.%m.%Y')}")
        st.info(res["status"])

        # –ü–æ–¥—Å–∫–∞–∑–∫–∏ –∏ –Ω–µ—Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤–∏—è
        d20 = safe_add_years(birth, 20)
        d45 = safe_add_years(birth, 45)
        if issue < d20 and age_years >= 20:
            st.warning("–î–∞—Ç–∞ –≤—ã–¥–∞—á–∏ —É–∫–∞–∑—ã–≤–∞–µ—Ç –Ω–∞ –¥–æ–∫—É–º–µ–Ω—Ç, –ø–æ–ª—É—á–µ–Ω–Ω—ã–π –¥–æ 20 –ª–µ—Ç, "
                       "–Ω–æ –≤–æ–∑—Ä–∞—Å—Ç —É–∂–µ 20+. –í–µ—Ä–æ—è—Ç–Ω–æ, –¥–æ–∫—É–º–µ–Ω—Ç –¥–æ–ª–∂–µ–Ω –±—ã–ª –±—ã—Ç—å –∑–∞–º–µ–Ω—ë–Ω –≤ 20 –ª–µ—Ç.")
        if issue < d45 and age_years >= 45:
            st.warning("–î–∞—Ç–∞ –≤—ã–¥–∞—á–∏ —É–∫–∞–∑—ã–≤–∞–µ—Ç –Ω–∞ –¥–æ–∫—É–º–µ–Ω—Ç –¥–æ 45 –ª–µ—Ç, "
                       "–Ω–æ –≤–æ–∑—Ä–∞—Å—Ç —É–∂–µ 45+. –í–µ—Ä–æ—è—Ç–Ω–æ, –¥–æ–∫—É–º–µ–Ω—Ç –¥–æ–ª–∂–µ–Ω –±—ã–ª –±—ã—Ç—å –∑–∞–º–µ–Ω—ë–Ω –≤ 45 –ª–µ—Ç.")

st.markdown("---")
st.caption("–ê–≤—Ç–æ—Ä: Andrei @ RM Workspace ‚Ä¢ –ì–æ—Ç–æ–≤–æ –∫ –¥–µ–ø–ª–æ—é –Ω–∞ Streamlit Community Cloud.")
'''

readme_md = r'''# –ö–∞–ª—å–∫—É–ª—è—Ç–æ—Ä –∑–∞–º–µ–Ω—ã –ø–∞—Å–ø–æ—Ä—Ç–∞ –†–§ üõÇ

–ü—Ä–æ—Å—Ç–æ–µ –≤–µ–±-–ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –Ω–∞ **Streamlit** –¥–ª—è —Ä–∞—Å—á—ë—Ç–∞ –¥–∞—Ç –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ–π –∑–∞–º–µ–Ω—ã –ø–∞—Å–ø–æ—Ä—Ç–∞ –≥—Ä–∞–∂–¥–∞–Ω–∏–Ω–∞ –†–§ –ø–æ –≤–æ–∑—Ä–∞—Å—Ç–Ω—ã–º –ø–æ—Ä–æ–≥–∞–º (20 –∏ 45 –ª–µ—Ç) —Å —É—á—ë—Ç–æ–º **90-–¥–Ω–µ–≤–Ω–æ–≥–æ** —Å—Ä–æ–∫–∞ –ø–æ—Å–ª–µ –¥–Ω—è —Ä–æ–∂–¥–µ–Ω–∏—è.

## ‚ú® –í–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏
- –í–≤–æ–¥: –¥–∞—Ç–∞ —Ä–æ–∂–¥–µ–Ω–∏—è –∏ –¥–∞—Ç–∞ –≤—ã–¥–∞—á–∏ —Ç–µ–∫—É—â–µ–≥–æ –ø–∞—Å–ø–æ—Ä—Ç–∞
- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π —Ä–∞—Å—á—ë—Ç —Å–ª–µ–¥—É—é—â–µ–π –¥–∞—Ç—ã –∑–∞–º–µ–Ω—ã –∏ –∫—Ä–∞–π–Ω–µ–≥–æ —Å—Ä–æ–∫–∞ (+90 –¥–Ω–µ–π)
- –°—Ç–∞—Ç—É—Å: –¥–µ–π—Å—Ç–≤–∏—Ç–µ–ª–µ–Ω / —Ç—Ä–µ–±—É–µ—Ç—Å—è –∑–∞–º–µ–Ω–∞ / –ø—Ä–æ—Å—Ä–æ—á–µ–Ω
- –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ, –Ω–∞ –∫–∞–∫–æ–º —ç—Ç–∞–ø–µ –±—ã–ª –≤—ã–¥–∞–Ω —Ç–µ–∫—É—â–∏–π –ø–∞—Å–ø–æ—Ä—Ç (14/20/45)
- –ö–æ—Ä—Ä–µ–∫—Ç–Ω–∞—è —Ä–∞–±–æ—Ç–∞ —Å –¥–∞—Ç–æ–π 29 —Ñ–µ–≤—Ä–∞–ª—è

> ‚ö†Ô∏è –ü—Ä–∏–º–µ—á–∞–Ω–∏–µ: –ù–æ—Ä–º–∞—Ç–∏–≤–Ω–∞—è –±–∞–∑–∞ –º–æ–∂–µ—Ç –æ–±–Ω–æ–≤–ª—è—Ç—å—Å—è. –î–ª—è —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã—Ö —Å–ª—É—á–∞–µ–≤ (–Ω–∞–ø—Ä–∏–º–µ—Ä, –∑–∞–º–µ–Ω–∞ –∑–∞ —Ä—É–±–µ–∂–æ–º, —á—Ä–µ–∑–≤—ã—á–∞–π–Ω—ã–µ —Å–∏—Ç—É–∞—Ü–∏–∏) –ø—Ä–æ–≤–µ—Ä—å—Ç–µ –¥–µ–π—Å—Ç–≤—É—é—â–∏–µ –ø—Ä–∞–≤–∏–ª–∞ –∏ —Ä–∞–∑—ä—è—Å–Ω–µ–Ω–∏—è –≥–æ—Å–æ—Ä–≥–∞–Ω–æ–≤.

## üöÄ –õ–æ–∫–∞–ª—å–Ω—ã–π –∑–∞–ø—É—Å–∫
```bash
python -m venv .venv
source .venv/bin/activate  # Windows: .venv\Scripts\activate
pip install -r requirements.txt
streamlit run app.py
